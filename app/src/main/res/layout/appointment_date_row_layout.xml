<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="appointmentViewModel"
            type="com.android.doctorapp.repository.models.DateModel" />

        <variable
            name="onItemClickListener"
            type="com.android.doctorapp.ui.appointment.adapter.AppointmentAdapter.OnItemClickListener" />

        <variable
            name="index"
            type="Integer" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_60"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/blue_border_drawable">
        <!--        android:onClick="@{()->onItemClickListener.onItemClick(appointmentViewModel,index)}">-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_schedule_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--            app:appointmentDate="@{appointmentViewModel.date.toString()}"-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>