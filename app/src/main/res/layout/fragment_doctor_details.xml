<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.android.doctorapp.ui.doctor.AddDoctorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarContainer"
            layout="@layout/custom_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:paddingVertical="@dimen/parentVerticalMargin_50"
            app:layout_constraintTop_toBottomOf="@+id/toolbarContainer">

            <androidx.cardview.widget.CardView
                android:id="@+id/doctorView"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:elevation="@dimen/margin_5"
                app:cardCornerRadius="16dp"
                android:background="@color/doctor_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/doctor_bg"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ivDoctorImageView"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10"
                        android:elevation="@dimen/margin_5"
                        app:cardCornerRadius="250dp"
                        android:layout_marginStart="@dimen/margin_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivDoctorImage"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:scaleType="centerCrop"
                            app:genderImage="@{viewModel.doctorDetails.gender}" />

                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDoctorName"
                        app:layout_constraintStart_toEndOf="@id/ivDoctorImageView"
                        app:layout_constraintTop_toTopOf="@id/ivDoctorImageView"
                        android:layout_marginStart="@dimen/margin_15"
                        style="@style/label_text2"
                        android:text="@{viewModel.doctorDetails.name}"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDoctorSpec"
                        app:layout_constraintStart_toEndOf="@id/ivDoctorImageView"
                        android:layout_marginStart="@dimen/margin_15"
                        style="@style/label_text2"
                        android:textSize="14sp"
                        android:textColor="@color/grey"
                        app:specialization="@{viewModel.doctorDetails.specialities}"
                        android:layout_marginTop="@dimen/margin_15"
                        app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_submit"
                style="@style/user_login_editText"
                android:layout_height="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_60"
                android:background="@drawable/button_state_colors"
                android:onClick="@{()->viewModel.addDoctorData()}"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorView" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                style="@style/user_login_editText"
                android:layout_height="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_60"
                android:background="@drawable/button_state_colors"
                android:onClick="@{()->viewModel.addDoctorData()}"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_submit" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>