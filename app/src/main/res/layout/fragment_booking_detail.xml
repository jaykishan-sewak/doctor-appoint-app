<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.android.doctorapp.ui.userdashboard.userfragment.BookingDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <include
            android:id="@+id/toolbarContainer"
            layout="@layout/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_margin="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarContainer">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorNameLabel"
                style="@style/label_text2"
                android:text="@string/name"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorNameValue"
                style="@style/label_text"
                android:text="@{viewModel.appointmentObj.doctorDetails.name}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/tvDoctorNameLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDoctorNameLabel"
                app:layout_constraintTop_toTopOf="@id/tvDoctorNameLabel"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorEmailLabel"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/email"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDoctorNameLabel"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorEmailValue"
                style="@style/label_text"
                android:text="@{viewModel.appointmentObj.doctorDetails.email}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/tvDoctorEmailLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDoctorEmailLabel"
                app:layout_constraintTop_toTopOf="@id/tvDoctorEmailLabel"
                app:layout_constraintWidth_percent="0.4" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorAgeLabel"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/age"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorEmailLabel"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorAgeValue"
                style="@style/label_text"
                android:layout_marginTop="@dimen/margin_10"
                android:textAlignment="textEnd"
                app:age="@{viewModel.appointmentObj.doctorDetails !=null ? viewModel.appointmentObj.doctorDetails.dob : null}"
                app:layout_constraintBottom_toBottomOf="@id/tvDoctorAgeLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDoctorAgeLabel"
                app:layout_constraintTop_toTopOf="@id/tvDoctorAgeLabel"
                app:layout_constraintWidth_percent="0.4"

                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorAddress"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/address"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorAgeLabel"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDoctorAddressValue"
                style="@style/label_text"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@{viewModel.appointmentObj.doctorDetails != null &amp;&amp; !viewModel.appointmentObj.doctorDetails.address.isEmpty() ? viewModel.appointmentObj.doctorDetails.address : `-`}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/tvDoctorAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvDoctorAddress"
                app:layout_constraintTop_toTopOf="@id/tvDoctorAddress"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBookingDateLabel"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/date"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorAddress"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBookingDateValue"
                style="@style/label_text"
                android:layout_marginTop="@dimen/margin_10"
                android:textAlignment="textEnd"
                app:headerDate="@{viewModel.appointmentObj.bookingDateTime}"
                app:layout_constraintBottom_toBottomOf="@id/tvBookingDateLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBookingDateLabel"
                app:layout_constraintTop_toTopOf="@id/tvBookingDateLabel"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBookingTimeLabel"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/time"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBookingDateLabel"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBookingTimeValue"
                style="@style/label_text"
                android:layout_marginTop="@dimen/margin_10"
                android:textAlignment="textEnd"
                app:headerTime="@{viewModel.appointmentObj.bookingDateTime}"
                app:layout_constraintBottom_toBottomOf="@id/tvBookingTimeLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBookingTimeLabel"
                app:layout_constraintTop_toTopOf="@id/tvBookingTimeLabel"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBookingStatusLabel"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/status"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBookingTimeValue"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatusValue"
                style="@style/label_text"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@{viewModel.appointmentObj.status}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/tvBookingStatusLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBookingStatusLabel"
                app:layout_constraintTop_toTopOf="@id/tvBookingStatusLabel"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContactNumberLabel"
                style="@style/label_text2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/contact"
                android:textAlignment="textStart"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvStatusValue"
                app:layout_constraintWidth_percent="0.6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContactNumberValue"
                style="@style/label_text"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@{viewModel.appointmentObj.doctorDetails.contactNumber}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/tvContactNumberLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvContactNumberLabel"
                app:layout_constraintTop_toTopOf="@id/tvContactNumberLabel"
                app:layout_constraintWidth_percent="0.4" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                style="@style/user_login_editText"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_50"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/button_state_colors"
                android:enabled="@{viewModel.checkAppointmentDate()}"
                android:onClick="@{()->viewModel.onCancelClick()}"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>