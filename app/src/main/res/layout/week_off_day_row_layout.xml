<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

<!--        <variable-->
<!--            name="viewModel"-->
<!--            type="com.android.doctorapp.repository.models.WeekOffModel" />-->

<!--        <variable-->
<!--            name="index"-->
<!--            type="Integer" />-->

        <variable
            name="viewModel"
            type="com.android.doctorapp.repository.models.WeekOffModel" />

        <variable
            name="onItemClickListener"
            type="com.android.doctorapp.ui.doctor.adapter.WeekOffDayAdapter.OnItemClickListener" />

        <variable
            name="index"
            type="Integer" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onItemClickListener.onItemClick(viewModel, index)}">

        <CheckBox
            android:id="@+id/week_off_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{viewModel.weekOff}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

<!--                    android:onCheckedChanged="@{() -> onItemClickListener.onItemClick(viewModel, index)}"-->


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.dayName}"
            app:layout_constraintBottom_toBottomOf="@+id/week_off_checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/week_off_checkbox"
            app:layout_constraintTop_toTopOf="@+id/week_off_checkbox" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>