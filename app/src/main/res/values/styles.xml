<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.InfusionTemplate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InfusionTemplate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.InfusionTemplate.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/white</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_illustration_login</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.InfusionTemplate.NoActionBar</item>
        # Required.
    </style>

    <style name="ToolbarStyle.White" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/transparent</item>
    </style>

    <style name="user_login_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="user_login_tlEditText" parent= "Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_10</item>
    </style>

    <style name="login_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="custom_edit_text_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_55</item>
        <item name="android:background">@drawable/custom_edittext_bg</item>
        <item name="android:layout_marginTop">@dimen/margin_15</item>
    </style>



    <style name="custom_otp_edit_text">
        <item name="android:layout_width">@dimen/margin_40</item>
        <item name="android:layout_height">@dimen/margin_50</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/opt_unpress_bg</item>
    </style>

</resources>