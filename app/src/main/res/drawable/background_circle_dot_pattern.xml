<!-- res/drawable/background_circle_dot_pattern.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Light grey background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_light_grey" />
            <padding
                android:bottom="@dimen/margin_2"
                android:left="@dimen/margin_2"
                android:right="@dimen/margin_2"
                android:top="@dimen/margin_2" />
        </shape>
    </item>

    <!--Blue Dot Background Circle -->
    <item android:drawable="@drawable/round_blue_dot_circle" />

    <!-- Plus Icon (Adjust the size and color as needed) -->
    <item android:drawable="@drawable/ic_add_blue_icon" />

</layer-list>
