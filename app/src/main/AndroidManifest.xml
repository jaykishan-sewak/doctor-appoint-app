<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.doctorapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name="com.android.doctorapp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.InfusionTemplate"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.android.doctorapp.ui.splash.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.InfusionTemplate.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.doctorapp.ui.authentication.AuthenticationActivity"
            android:theme="@style/Theme.InfusionTemplate.NoActionBar"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity android:name="com.android.doctorapp.ui.dashboard.DashboardActivity"
            android:theme="@style/Theme.InfusionTemplate.NoActionBar"/>

        <activity android:name="com.android.doctorapp.ui.settings.SettingsActivity"
            android:theme="@style/Theme.InfusionTemplate.NoActionBar"/>
    </application>

</manifest>